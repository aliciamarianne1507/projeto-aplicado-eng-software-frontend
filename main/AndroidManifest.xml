<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projetoaplicadopos" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetoAplicadoPos" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="@string/app_name"
            android:name=".admin.PaginaInicialAdmin" >
        </activity>
        <!-- USUARIOS -->
        <activity
            android:label="@string/app_name"
            android:name=".usuarios.CadastroUsuario" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".usuarios.PaginaInicialUsuarios" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".usuarios.EditarUsuario" >
        </activity>
        <!-- CATEGORIA -->
        <activity
            android:label="@string/app_name"
            android:name=".categoria.CriarCategoria" >
        </activity>
        <!-- PEDIDOS -->
        <activity
            android:label="@string/app_name"
            android:name=".pedidos.CadastroPedido" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".pedidos.ListaPedidos" >
        </activity>

        <!-- PRODUTOS -->
        <activity
            android:label="@string/app_name"
            android:name=".produtos.ListaProdutos" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".produtos.CadastroProduto" >
        </activity>
    </application>

</manifest>